<local:BaseWindow x:TypeArguments="ViewModels:NewInvoiceViewModel"
        x:Class="Bitpapr.Automax.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bitpapr.Automax"
        xmlns:ViewModels="clr-namespace:Bitpapr.Automax.ViewModels"
        mc:Ignorable="d"
        Title="LoginWindow" Width="300"
        ResizeMode="NoResize"
        SizeToContent="Height">
    <Border Padding="8 8 8 8">
        <StackPanel Orientation="Vertical">
            <TextBox Tag="Nome de Login" />
            <PasswordBox x:Name="PasswordText" Tag="Senha" Margin="0 8 0 0" />
            <Button Content="Entrar" Margin="0 32 0 0" />
        </StackPanel>
    </Border>
</local:BaseWindow>
